<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="1" id="xyz.navinda.sinhalapodcasts" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Sinhala Podcasts</name>
    <description>
        Simple app to listen &amp; download Sinhala podcasts.
    </description>
    <author email="navinda@yandex.com" href="http://www.navinda.xyz/">
        Navinda Dissanayake
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.4.1" />
    <plugin name="cordova-plugin-background-mode" spec="^0.7.2" />
    <plugin name="cordova-plugin-local-notification" spec="^0.9.0-beta.2" />
    <engine name="android" spec="^7.0.0" />
</widget>
